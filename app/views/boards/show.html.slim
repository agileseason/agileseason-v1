.board [
    data-github_full_name="#{@board_bag.github_full_name}"

    data-faye-on="#{FayePusher.on?}"
    data-faye-url="#{FayePusher::URL}"
    data-faye-channel="#{FayePusher.board_channel(@board)}"
    data-faye-client-id="#{current_user.remember_token}"

    data-login="#{current_user}"
    data-html-url="https://github.com/#{current_user}"
    data-avatar-url="#{github_avatar_url(current_user)}"
  ]

  = render partial: 'issues/modal'
  = render partial: 'issues/modal_new'

  .board-columns
    - @board_bag.columns.each do |column|
      = render partial: 'columns/show', locals: { column: column }
