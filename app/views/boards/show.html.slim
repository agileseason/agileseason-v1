h1 Board#show

h2 = @board.name

.submenu
  ul
    li : a href="#{board_graphs_cumulative_index_url(@board)}" Graphs

.actions
  a href="#{new_board_issues_url(@board)}" New issue

.columns
  - @board.columns.each do |column|
      .column
        .title = column.name
        .issues
          - @issues[column.label_name].each do |issue|
              .issue
                .header
                  a.url href="#{issue.html_url}" target="_blank" ##{issue.number}
                  .title = issue.title
                  - if issue.user
                    .assigned
                      img.avatar src="#{issue.user.avatar_url}"
                      a.user href="#{issue.user.html_url}" target="_blank" = issue.user.login
                  .state = "[#{issue.state}]"
                .body
                  .move_to
                    .title Move To
                    ul.columns
                      - @board.columns.each do |column|
                        li: a href="#{move_to_column_board_issues_url(@board, issue.number, column)}" = column.name
                  /.stats
                    .title Stats (hidden)
                    .hash = TrackStats.extract(issue.body)[:hash]
