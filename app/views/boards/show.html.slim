h1 Board#show

h2 = @board.name

.actions
  a href="#{new_board_issues_url(@board)}" New issue

.columns
  - @board.columns.each do |column|
      .column
        .title = column.name
        .issues
          - @issues[column.label_name].each do |issue|
              .issue
                .title = issue.title
                .url
                  a href="#{issue.html_url}" target='_blank' #{issue.number}
