<div>
  <div id="container"></div>
  <script type="text/javascript" charset="utf-8">
    $(function () {
      $('#container').highcharts({
        chart: {
          height: 600,
          marginTop: 40,
          type: 'column'
        },
        title: {
          text: false
        },
        colors: [
          '#FFE57F', // Backlog
          '#FFC400', // To do
          '#536DFE', // Progress
          '#8C9EFF', // Test
          '#B9F6CA', // Review
          '#00E676', // Done
          '#6200EA',
          '#B388FF'
        ],
        xAxis: {
          categories: <%= raw @builder.categories %>,
          title: {
            text: ''
          }
        },
        yAxis: {
          title: {
            text: 'Estimated days'
          },
          allowDecimals: false
          <%#,%>
          <%#labels: {%>
              <%#formatter: function () {%>
                  <%#return this.value;%>
              <%#}%>
          <%#},%>
        },
        legend: false,
        plotOptions: {
          column: {
            borderWidth: 0,
            groupPadding: 0,
            pointPadding: 0,
            shadow: false,
            stacking: 'normal'
          }
        },
        tooltip: {
          headerFormat: '<b>{point.key}</b><br/>',
          pointFormat: '{point.tooltip}',
        },
        series: [
          {
            name: 'Average days',
            colorByPoint: true,
            data: [
              <% @builder.series_forecast.each do |data| %>
                {
                  issues: <%= data[:issues] %>,
                  tooltip: '<%= raw data[:tooltip] %>',
                  y: <%= data[:y] %>
                },
              <% end %>
            ]
          }, {
            name: 'Before',
            color: '#E0E0E0',
            data: [
              <% @builder.series_prev.each do |data| %>
                {
                  issues: <%= data[:issues] %>,
                  tooltip: 'Delay from previous columns',
                  y: <%= data[:y] %>
                },
              <% end %>
            ]
          },
        ]
      });
    });
  </script>
</div>
